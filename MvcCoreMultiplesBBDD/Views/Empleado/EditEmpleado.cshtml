@model MvcCoreMultiplesBBDD.Models.Empleado

@{
    ViewData["Title"] = "EditEmpleado";
}

<h1>EditEmpleado</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditEmpleado">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
      
                <input name="IdEmpleado" class="form-control" type="hidden" value="@Model.IdEmpleado"/>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="Oficio" class="control-label"></label>
                <input name="Oficio" class="form-control" value="@Model.Oficio"/>
                <span asp-validation-for="Oficio" class="text-danger"></span>
            </div>
          
          
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input name="Salario" class="form-control" value="@Model.Salario" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
